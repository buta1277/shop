<!-- sections/lookbook-carousel.liquid -->
{{ 'hdt-lookbook.css' | asset_url | stylesheet_tag }}
{% style %}
  #{{ section.id }}{
    --section-pt: {{ section.settings.padding_top }}px;
    --section-pb: {{ section.settings.padding_bottom }}px; 
    --section-prate: {{ section.settings.padding_rate }};
  }
{% endstyle %}
<div id="{{ section.id }}" class="hdt-section-spacing hdt-s-gradient" color-scheme="{{ section.settings.color_scheme }}">
  <div class="hdt-s-inner">
    <div class="hdt-container">
      {% content_for "block", type: "section-heading", id: "lookbook-heading" %}
    </div>
    <div class="hdt-container{% if section.settings.full_width %}-full{% endif %}">
      <hdt-slider id="lookbook-carousel-id-{{ section.id }}" class="hdt-slider hdt-lookbook-slider hdt-slider__dots_on_content no-js-hidden hdt-slides-1 {% if section.blocks.size > 1 %}md:hdt-slides-{{ section.settings.item_show }} {% endif %}{% if section.settings.item_show == '22' %}hdt-slide-spacing-10 lg:hdt-slide-spacing-30 {% endif %}hdt-ratio--{{ section.settings.image_ratio }} hdt-relative" config='{"navUI": {{ section.settings.navUI }}, "dotUI": true, "classNames": true, "autoPlay": {{ section.settings.auto_play | times: 1000 }}, "pauseOnHover": {{ section.settings.pause_hover }}}'>
        <div class="hdt-slider__viewport">
          <div class="hdt-slider__container">
            {% content_for "blocks" %}
          </div>
        </div>
        {%- if section.blocks.size > 1 -%}
          {%- if section.settings.navigate_style == 'mixed' -%}
            {%- if section.settings.navUI == true or section.settings.dotUI == true -%}
              <div class="hdt-lookbook_nav hdt-pe-none hdt-nav_mixed hdt-inline-flex hdt-justify-center hdt-align-center hdt-absolute hdt-left-0 hdt-right-0">
                <div class="hdt-lookbook_nav-wrap hdt-s-gradient hdt-inline-flex hdt-align-center">
                  {%- if section.settings.navUI == true -%}              
                    <button aria-controls="lookbook-carousel-id-{{ section.id }}" disabled="" class="hdt-slide_button previous" name="previous"><svg xmlns="http://www.w3.org/2000/svg" width="7" height="11" viewBox="0 0 7 11" fill="currentColor">
                      <path d="M5.5 11L0 5.5L5.5 0L6.47625 0.97625L1.9525 5.5L6.47625 10.0238L5.5 11Z"/>
                    </svg></button>
                  {%- endif -%}
                  {%- if section.settings.dotUI == true -%}
                    <div aria-controls="lookbook-carousel-id-{{ section.id }}" hdt-slider-dots class="hdt-slider__dots hdt-inline-flex hdt-justify-center"></div>
                  {%- endif -%}
                  {%- if section.settings.navUI == true -%}
                    <button aria-controls="lookbook-carousel-id-{{ section.id }}" disabled="" class="hdt-slide_button next" name="next"><svg xmlns="http://www.w3.org/2000/svg" width="7" height="11" viewBox="0 0 7 11" fill="currentColor">
                      <path d="M1.5 11L7 5.5L1.5 0L0.52375 0.97625L5.0475 5.5L0.52375 10.0238L1.5 11Z"/>
                    </svg></button>
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
          {%- elsif section.settings.navigate_style == 'normal' -%}
            {%- if section.settings.navUI == true -%}
              <div class="hdt-lookbook_nav2 hdt-hidden@mobile hdt-nav_normal hdt-pe-none hdt-flex hdt-justify-between hdt-align-center hdt-absolute hdt-left-0 hdt-right-0">
                <button aria-controls="lookbook-carousel-id-{{ section.id }}" disabled="" class="hdt-slider__button hdt-slider__button--prev hdt-radius-full hdt-inline-flex hdt-align-center hdt-justify-center" name="previous">
                  <svg xmlns="http://www.w3.org/2000/svg" width="7" height="11" viewBox="0 0 7 11" fill="currentColor">
                    <path d="M5.5 11L0 5.5L5.5 0L6.47625 0.97625L1.9525 5.5L6.47625 10.0238L5.5 11Z"/>
                  </svg>
                </button>
                <button aria-controls="lookbook-carousel-id-{{ section.id }}" disabled="" class="hdt-slider__button hdt-slider__button--next hdt-radius-full hdt-inline-flex hdt-align-center hdt-justify-center" name="next">
                  <svg xmlns="http://www.w3.org/2000/svg" width="7" height="11" viewBox="0 0 7 11" fill="currentColor">
                    <path d="M1.5 11L7 5.5L1.5 0L0.52375 0.97625L5.0475 5.5L0.52375 10.0238L1.5 11Z"/>
                  </svg>
                </button>
              </div>
            {%- endif -%}
              <div aria-controls="lookbook-carousel-id-{{ section.id }}" hdt-slider-dots class="hdt-slider__dots {% if section.settings.dotUI == false %}md:hdt-hidden {% endif %}hdt-dot_normal hdt-inline-flex hdt-absolute hdt-left-0 hdt-right-0 hdt-justify-center"></div>
          {%- endif -%}
        {%- endif -%}
      </hdt-slider>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "t:sections.lookbook.name2",
  "tag": "section",
  "class": "hdt-section hdt-lookbook hdt-lookbook-slider",
  "max_blocks": 6,
  "disabled_on": {
    "groups": [
      "*"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.lookbook.general"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "t:sections.all.images.ratio.label",
      "options": [
        {
          "value": "square",
          "label": "t:sections.all.images.ratio.square.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.all.images.ratio.portrait.label"
        },
        {
          "value": "asos",
          "label": "t:sections.all.images.ratio.asos.label"
        },
        {
          "value": "landscape",
          "label": "t:sections.all.images.ratio.landscape.label"
        },
        {
          "value": "adapt_image",
          "label": "t:sections.all.images.ratio.adapt_image.label"
        }
      ],
      "default": "adapt_image"
    },
    {
      "type": "select",
      "id": "item_show",
      "label": "t:sections.lookbook.settings.item_show.label",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "22",
          "label": "1 (75% width)"
        },
        {
          "value": "2",
          "label": "2 (50% width)"
        }
      ],
      "default": "1",
      "info": "t:sections.lookbook.settings.item_show.info"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.lookbook.blocks.color"
    },
    {
      "type": "header",
      "content": "t:sections.all.slider.label"
    },
    {
      "type": "range",
      "id": "auto_play",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "t:sections.all.slider.autoPlay.label",
      "default": 0,
      "info": "t:sections.all.slider.autoPlay.info"
    },
    {
      "type": "checkbox",
      "id": "pause_hover",
      "label": "t:sections.all.slider.pauseOnHover",
      "default": false
    },
    {
      "type": "select",
      "id": "navigate_style",
      "label": "t:sections.lookbook.settings.navigate.label",
      "options": [
        {
          "value": "mixed",
          "label": "t:sections.lookbook.settings.navigate.options.mixed"
        },
        {
          "value": "normal",
          "label": "t:sections.lookbook.settings.navigate.options.normal"
        }
      ],
      "default": "mixed"
    },
    {
      "type": "checkbox",
      "id": "navUI",
      "label": "t:sections.all.slider.navUI",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "dotUI",
      "label": "t:sections.all.slider.dotUI",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "t:sections.all.full_width.label",
      "default": false
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    },
    {
      "type": "range",
      "id": "padding_rate",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "t:sections.all.padding.padding_rate",
      "default": 75
    }
  ],
  "blocks": [{ "type": "_lookbook" }],
  "presets": [
    {
      "name": "t:sections.lookbook.name2",
      "category": "t:sections_categories.02_banner.name",
      "blocks": [
        {
          "type": "_lookbook",
          "settings": {
            "img_effect": "none",
            "b_effect": "none"
          },
          "blocks": [
            {
              "type": "_pin-product",
              "settings": {
                "color_scheme": "",
                "left": 50,
                "top": 50,
                "pin_size": "medium",
                "pin_type": "showtext",
                "text": "1",
                "product": "",
                "product_des": "1",
                "image_ratio": "adapt_image",
                "image_size": true,
                "show_vendor": false,
                "placement": "top",
                "product_color_scheme": ""
              }
            }
          ]
        },
        {
          "type": "_lookbook",
          "settings": {
            "img_effect": "none",
            "b_effect": "none"
          },
          "blocks": [
            {
              "type": "_pin-product",
              "settings": {
                "color_scheme": "",
                "left": 50,
                "top": 50,
                "pin_size": "medium",
                "pin_type": "showtext",
                "text": "1",
                "product": "",
                "product_des": "1",
                "image_ratio": "adapt_image",
                "image_size": true,
                "show_vendor": false,
                "placement": "top",
                "product_color_scheme": ""
              }
            }
          ]
        },
        {
          "type": "section-heading",
          "static": true,
          "id": "lookbook-heading",
          "settings": {
            "alignment": "center",
            "row_gap": 15,
            "margin_bottom": 30
          },
          "blocks":[
            {
              "type": "heading",
              "settings": {
                "heading": "<p>Lookbook carousel</p>",
                "hidden_br_mobile": false,
                "hidden_on_mobile": false,
                "heading_size": "h4",
                "text_color": "hdt-s-text",
                "font_size_heading_lg": 50,
                "font_size_heading_md": 30,
                "font_size_heading": 24,
                "font_weight_heading": 600,
                "letter_spacing_heading": 0
              }
            }
          ]
        }
      ]
    }
  ]
}
