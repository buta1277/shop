      "label": "t:sections.all.padding.padding_top",
      "default": 130,
      "visible_if": "{{ section.settings.collection_list != blank }}"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 130,
      "visible_if": "{{ section.settings.collection_list != blank }}"
    },
    {
      "type": "range",
      "id": "padding_rate",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "t:sections.all.padding.padding_rate",
      "default": 75,
      "visible_if": "{{ section.settings.collection_list != blank }}"
    }
  ],
  "blocks": [
    {
