<!-- section/banner.liquid -->

{{ 'hdt-banner.css' | asset_url | stylesheet_tag }}

{%-liquid
  assign nav_class = '' 
  if section.settings.nav_rounded 
    assign nav_class = 'hdt-radius-full'
  endif

-%}
{% style %}
  #shopify-section-{{section.id}}{
    --section-pt:{{section.settings.padding_top}}px;
    --section-pb:{{section.settings.padding_bottom}}px;
    --section-prate:{{section.settings.padding_rate}}
  }
  #{{section.id}} .hdt-banner_wrap{
    --spacing-x:{{section.settings.space_item_mb | default: 15 }}px;
    --spacing-y:{{section.settings.space_item_mb | default: 15 }}px;
    --aspect-ratioapt:{{section.settings.row_height_mb}}px;
  }
  @media(min-width:768px){
    #{{section.id}} .hdt-banner_wrap{
      --spacing-x:{{section.settings.space_item_tb}}px;
      --spacing-y:{{section.settings.space_item_tb}}px;
      --aspect-ratioapt-md:{{section.settings.row_height_tb}}px
    }
  }
  @media(min-width:1150px){
    #{{section.id}} .hdt-banner_wrap{
      --spacing-x:{{section.settings.space_item}}px;
      --spacing-y:{{section.settings.space_item}}px;
      --aspect-ratioapt-md:{{section.settings.row_height}}px
    }
  }
  @media (max-width:767px){
    .hdt-banner .hdt-banner_wrap.hdt-flex-cols-1 .hdt-col{
      flex:1 0 75%
    }
  }
{% endstyle %}
<div id="{{ section.id }}" class="hdt-section-inner hdt-section-spacing hdt-s-gradient"{% if section.index != 1 %} hdt-reveal="fade-in"{% endif %} color-scheme="{{ section.settings.color_scheme }}">
  <div class="hdt-container{% if section.settings.full_width %}-full{% endif %} {% if section.settings.full_width == true and section.settings.boxed_fullwidth == true %}hdt-px-15 md:hdt-px-30 lg:hdt-px-40{% endif %}">
    <hdt-slider id="Slider-{{ section.id }}" class="hdt-banner_wrap hdt-height--fixed md:hdt-height--fixed hdt-slider hdt-slider-parent hdt-slide-spacing-x hdt-relative {% if section.settings.navUI %}hdt-slider-has-nav hdt-nav-btns-{{ section.settings.nav_des }} hdt-nav-shape_{{ section.settings.nav_shape }} hdt-nav-{{ section.settings.nav_pos }} hdt-nav-{{ section.settings.nav_size }} hdt-slider-btn-vi-{{ section.settings.btn_vi }}{% endif %} {% if section.settings.dotUI %} hdt-slider-has-dots-dk{% endif %} hdt-dots-outline lg:hdt-slides-{{ section.settings.col_dk }} md:hdt-slides-{{ section.settings.col_tb }} hdt-slides-1" config='{ "id": "Slider-{{ section.id }}", "navUI": {{ section.settings.navUI }}, "dotUI": true }'>
      <div class="hdt-slider__viewport hdt-relative">
        <div class="hdt-slider__container">
          {% content_for 'blocks' %}
        </div>
      </div>
      {%- if section.settings.navUI == true -%}
        <button
          aria-controls="Slider-{{ section.id }}"
          disabled=""
          class="hdt-slider__button hdt-slider-nav hdt-slider__button--prev hdt-hidden@mobile hdt-flex hdt-align-center hdt-justify-center hdt-absolute hdt-left-0 previous hdt-rounded-full"
          name="previous"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="7" height="11" viewBox="0 0 7 11" fill="currentColor">
            <path d="M5.5 11L0 5.5L5.5 0L6.47625 0.97625L1.9525 5.5L6.47625 10.0238L5.5 11Z"/>
          </svg>
        </button>
        <button
          aria-controls="Slider-{{ section.id }}"
          disabled=""
          class="hdt-slider__button hdt-slider-nav hdt-slider__button--next hdt-hidden@mobile hdt-flex hdt-align-center hdt-justify-center hdt-absolute hdt-right-0 next"
          name="next"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="7" height="11" viewBox="0 0 7 11" fill="currentColor">
            <path d="M1.5 11L7 5.5L1.5 0L0.52375 0.97625L5.0475 5.5L0.52375 10.0238L1.5 11Z"/>
          </svg>
        </button>
      {%- endif -%}
      <div hdt-slider-dots class="hdt-slider__dots hdt-flex hdt-align-center hdt-justify-center" aria-controls="Slider-{{ section.id }}"></div>
    </hdt-slider>
  </div>
</div>
