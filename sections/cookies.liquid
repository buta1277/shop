    },
    {
      "type": "select",
      "id": "hor-ver-layout",
      "label": "t:sections.cookies.settings.hor-ver-layout.label",
      "default": "hor",
      "options": [
        {
          "value": "hor",
          "label": "t:sections.cookies.settings.hor-ver-layout.option_1"
        },
        {
          "value": "ver",
          "label": "t:sections.cookies.settings.hor-ver-layout.option_2"
