<!-- section/slideshow-center.liquid -->
{{ 'hdt-slideshow.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign first_block = section.blocks[0]
-%}

{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-pt: {{ section.settings.padding_top }}px;
    --section-pb: {{ section.settings.padding_bottom }}px; 
    --section-prate: {{ section.settings.padding_rate }};
  }
  #Slider-{{ section.id }} {
    {% if section.settings.image_height_mb == 'adapt_image_first' or section.settings.image_height_mb == 'fixed' %}--aspect-ratioapt:{% if section.settings.image_height_mb == 'adapt_image_first' %}{% assign image_mb_first = first_block.settings.image_mb | default: first_block.settings.image %}{{ image_mb_first.aspect_ratio | default: 2.0 }}{% else %}{{ section.settings.fixed_height_mb }}px{% endif %};{% endif %}
    {% if section.settings.image_height == 'adapt_image_first' or section.settings.image_height == 'fixed' %}--aspect-ratioapt-md:{% if section.settings.image_height == 'adapt_image_first' %}{{ first_block.settings.image.aspect_ratio | default: 2.0 }}{% else %}{{ section.settings.fixed_height }}px{% endif %};{% endif %}
  }
{%- endstyle -%}

<div class="hdt-s-inner hdt-section-spacing" {%- unless section.index == 1 -%}hdt-reveal="fade-in"{%- endunless -%}>
  <hdt-slideshow autoheight id="Slider-{{ section.id }}" class="hdt-slider hdt-container{% if section.settings.full_width %}-full{% endif %} hdt-slideshow hdt-slides-1 hdt-relative {% if section.blocks.size > 2 %}center_item-true md:hdt-slide-spacing-30{% endif %}" config='{"loop": true, "navUI": {{ section.settings.navUI }}, "dotUI": {{ section.settings.dotUI }}, "autoPlay": {{ section.settings.auto_play | times: 1000 }}, "pauseOnHover": {{ section.settings.pause_hover }}, "align": "center", "classNames": true, "autoHeight": true }'>
    <div class="hdt-slider__viewport md:hdt-height--{{ section.settings.image_height }} hdt-height--{{ section.settings.image_height_mb }}">
      <div class="hdt-slider__container">
        {% content_for 'blocks' %}
      </div>
    </div>
    {%- if section.settings.navUI == true -%}
      <div class="hdt-full-width-link hdt-nav-{{ section.settings.nav_des }} hdt-container hdt-pe-none hdt-flex hdt-justify-between hdt-align-center" color-scheme="{{ section.settings.color_scheme }}">
        <button aria-controls="Slider-{{ section.id }}" disabled="" class="hdt-slider__button {% if section.settings.nav_rounded_full %} hdt-radius-full{% endif %} hdt-slider__button--prev hdt-inline-flex hdt-align-center hdt-justify-center" name="previous"><svg xmlns="http://www.w3.org/2000/svg" width="7" height="11" viewBox="0 0 7 11" fill="currentColor">
          <path d="M5.5 11L0 5.5L5.5 0L6.47625 0.97625L1.9525 5.5L6.47625 10.0238L5.5 11Z"/>
        </svg></button>
        <button aria-controls="Slider-{{ section.id }}" disabled="" class="hdt-slider__button {% if section.settings.nav_rounded_full %} hdt-radius-full{% endif %} hdt-slider__button--next hdt-inline-flex hdt-align-center hdt-justify-center" name="next"><svg xmlns="http://www.w3.org/2000/svg" width="7" height="11" viewBox="0 0 7 11" fill="currentColor">
          <path d="M1.5 11L7 5.5L1.5 0L0.52375 0.97625L5.0475 5.5L0.52375 10.0238L1.5 11Z"/>
        </svg></button>
      </div>
    {%- endif -%}
    {%- if section.settings.dotUI == true -%}
      <div hdt-slider-dots aria-controls="Slider-{{ section.id }}" class="hdt-slider__dots hdt-slideshow-dots hdt-container hdt-left-0 hdt-right-0 hdt-slider__dots-{{ section.settings.dot_style }} hdt-pe-none hdt-inline-flex hdt-justify-center hdt-absolute hdt-bottom-0" color-scheme="{{ section.settings.color_scheme }}" style="--dot-space:{{ section.settings.dot_space }}px;"></div>
    {%- endif -%}
  </hdt-slideshow>
</div>
