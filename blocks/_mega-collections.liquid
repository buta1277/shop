
{{ 'hdt-collections-list.css' | asset_url | stylesheet_tag }}


{%- style -%}
  {% if block.settings.content_padding > 30 %}
    #block-{{ block.id }} {
      --content-pd: 15px;
      @media(min-width:768px) {
        --content-pd: 30px
      }
      @media(min-width:1150px) {
        --content-pd:{{block.settings.content_padding}}px
      }
    }
  {% elsif block.settings.content_padding > 15 %}
    #block-{{ block.id }} {
      --content-pd: 15px;
      @media(min-width:768px) {
        --content-pd:{{block.settings.content_padding}}px
      }
    }
  {% else %}
    #block-{{ block.id }} {
      --content-pd:{{block.settings.content_padding}}px
    }
  {% endif %}
{%- endstyle -%}

<div id="block-{{ block.id }}" class="hdt-collection-list-wrap hdt-boxed_content hdt-ratio--{{ block.settings.image_ratio }} {% unless block.settings.image_size %} hdt-ratio--contain{% endunless %}">
  <div class="hdt-has-collection{{ block.settings.collection_des }} hdt-relative hdt-text-uppercase-{{ block.settings.text_transform }} hdt-row-grid hdt-grid-cols-{{ block.settings.col }}" color-scheme="{{ block.settings.color_scheme }}">
    {%- for collection in block.settings.collection_list -%}
      {%- content_for "block", type: "_mega-collections-item",
        id: "mega-collections-item",
        closest.collection: collection,
        collection_des: block.settings.collection_des,
        content_size: block.settings.content_size,
        content_weight: block.settings.content_weight,
        content_position: block.settings.content_position
      -%}
    {%- endfor -%}
  </div>
</div>

