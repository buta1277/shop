{%-liquid
  assign form_id = 'CartDrawer-Form'
-%}
<hdt-block-required detect="checked" event="change" class="hdt-cart-checkbox" {{ block.shopify_attributes }}>
  <div class="hdt-checkbox-wrapp hdt-inline-grid hdt-relative hdt-oh">
    <input form="{{ form_id }}" class="hdt-grid-1x1" type="checkbox" id="{{ form_id }}_agree" required name="agree_checkbox">
    <svg class="hdt-grid-1x1 hdt-pe-none" width="12" height="12" viewBox="0 0 24 24"><path d="M9 20l-7-7 3-3 4 4L19 4l3 3z"></path></svg>
  </div>
  <label for="{{ form_id }}_agree">{{ block.settings.content }}</label>
</hdt-block-required>
{% schema %}
  {
    "name": "t:sections.mini-cart.blocks.agree.name",
    "tag":null,
    "settings": [
      {
        "type": "paragraph",
        "content": "t:sections.mini-cart.blocks.agree.settings.paragraph.content"
      },
      {
        "type": "inline_richtext",
        "id": "content",
        "label": "t:sections.mini-cart.blocks.agree.settings.content.label",
        "default": "I agree with the terms and conditions"
      }
    ],
    "presets": [
      {
        "name": "t:sections.mini-cart.blocks.agree.name"
      }
    ]
  }
{% endschema %}
