{%- liquid
  unless product
    assign product = section.settings.product
  endunless
-%}
{%- unless block.settings.title == blank or product.description == blank -%}
  <!--item-title>
  <button aria-current="{%- if block.settings.open %}true{% else %}false{% endif %}" class="hdt-s-text hdt-relative hdt-font-semibold">{{ block.settings.title | escape }}</button>
  -->
  <div class="hdt-tab-item-content hdt-rte" tab-item {%- if block.settings.open %} tab-selected{% endif %} data-type={{ block.type }} {{ block.shopify_attributes }}>
    {{- product.description -}}
  </div>
{%- endunless -%}
{% schema %}
 {
   "name": "t:sections.main-product-tabs.blocks.tab_des.name",
   "tag": null,
   "settings": [
    {
      "type": "checkbox",
      "id": "open",
      "label": "Open",
      "default": false
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.main-product-tabs.blocks.title.label",
      "default": "Description"
    }
   ],
   "presets": [
    { 
      "name": "t:sections.main-product-tabs.blocks.tab_des.name" ,
    }
  ]
 }
{% endschema %}