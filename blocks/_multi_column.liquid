{% style %}
  #{{ block.id }}{
    --background-color: {{ block.settings.background_color }};
    --column-padding-mb: {{ block.settings.spacing_v_mb }}px {{ block.settings.spacing_h_mb }}px;
    --column-padding-tb: {{ block.settings.spacing_v_tb }}px {{ block.settings.spacing_h_tb }}px;
    --column-padding-dk: {{ block.settings.spacing_v_dk }}px {{ block.settings.spacing_h_dk }}px;
  }
{% endstyle %}
<div id="{{ block.id }}" class="hdt-column hdt-g-col hdt-g-col-{{ block.settings.column_mb }} md:hdt-g-col-{{ block.settings.column_tb }} lg:hdt-g-col-{{ block.settings.column_dk }} {{ block.settings.rounded }} hdt-text-{{ block.settings.alignment_mb }} md:hdt-text-{{ block.settings.alignment }} hdt-oh hdt-relative hdt-grid" {{ block.shopify_attributes }}>
    {%- liquid
      assign image_background = block.settings.background_image
      if image_background != blank
        echo image_background | image_url: width: image_background.width | image_tag: width: image_background.width, height: image_background.height, alt: image_background.alt, class: 'hdt-full-width-link hdt-w-full hdt-h-full hdt-object-cover hdt-pe-none hdt-z-0', loading: 'lazy'
      endif
    -%}
    <div class="hdt-column_inner hdt-place-self-{{ block.settings.content_position_mb }} md:hdt-place-self-{{ block.settings.content_position }} hdt-text-{{ block.settings.alignment_mb }} md:hdt-text-{{ block.settings.alignment }}" style="position: relative;{% if block.settings.content_width == 'full' %}justify-self:auto;{% endif %}">
      {% content_for 'blocks' %}

    </div>
</div>
