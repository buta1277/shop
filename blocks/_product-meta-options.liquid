{%- liquid
  unless product
    assign product = section.settings.product
  endunless
  if product == blank 
    continue
  endif
-%}
{%- if product.has_only_default_variant == false -%}
  {%- for product_option in product.options_with_values -%}
    <div class="hdt-option-wrapper">{{ product_option.name | escape }}: <span class="hdt-productMeta__value hdt-option-value hdt-csecondary hdt-inline-block">{{ product_option.values | join: ', ' }}</span></div>
  {%- endfor -%}
{%- endif -%}
{% schema %}
{
  "name": "t:sections.main-product.blocks.meta.settings.show_options.label",
  "tag": null,
  "settings": [
  ],
  "presets": [
    { 
      "name": "t:sections.main-product.blocks.meta.settings.show_options.label",
    }
  ]
}
{% endschema %}