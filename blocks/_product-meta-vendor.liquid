{
  "name": "t:sections.main-product.blocks.meta.settings.show_vendor.label",
  "tag": null,
  "settings": [
  ],
  "presets": [
    { 
      "name": "t:sections.main-product.blocks.meta.settings.show_vendor.label", 
    }
  ]
}
{% endschema %}