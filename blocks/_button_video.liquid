<hdt-video-popup class="hdt-button-video-wrapper" {{ block.shopify_attributes }}>
  {%- if block.settings.click_action == 'inline' -%}
    <input type="checkbox" id="input-{{ block.id }}" class="hdt-visually-hidden hdt-hidden"/>
  {% endif %}
  <label id="button-{{ block.id }}" {% if block.settings.click_action == 'popup' %}aria-controls="modal-{{ block.id }}"{% else %} for="input-{{ block.id }}" {% endif %} hdt-reveal="slide-in" timeline class="hdt-button-block hdt-btn hdt-relative hdt-oh hdt-font-{{ block.settings.font_weight }} hdt-btn--size-{{ block.settings.size }} {{ block.settings.btn_style }}{% if block.settings.full_width %} hdt-btn-full-width{% endif %}{% if block.settings.icon != "none" %} hdt-btn--with-icon  hdt-btn--pos-icon-{{ block.settings.icon_position }}{% endif %}"{% if block.settings.icon != "none" %} style="--gap-btn-icon: {{ block.settings.icon_spacing }}px; --height-btn-icon: {{ block.settings.icon_height }}px; height: 100%"{% endif %} {% if block.settings.open_in_new_tab %} rel="noopener noreferrer"{% endif -%}>
    {%- liquid
      if block.settings.icon != 'none'
        render 'icons', icon: block.settings.icon
      endif
      echo block.settings.label
      -%}
  </label>
  {%- if block.settings.size == "custom custom-inline" -%}
    {%- style -%}
      #button-{{ block.id }} {
        --hdt-btn-padding-x: {{ block.settings.padding_btn }}px; --hdt-btn-line-height: {{ block.settings.min_height_btn }}px; --hdt-btn-font-size: {{ block.settings.font_size_btn }}px;--minw-button: {{ block.settings.min_width_btn }}px; --minwdt-button: {{ block.settings.min_width_dt_btn }}px;
        min-height: {{ block.settings.min_height_btn }}px;
        {% if block.settings.radius_full %}
          border-radius: var(--radius-full);
          aspect-ratio: 1;
        {% endif %}
      }
    {%- endstyle -%}
  {%- endif -%}
  <hdt-modal class="hdt-modal hdt-modal-video hdt-contents">
    <dialog id="modal-{{ block.id }}" class="hdt-dialog hdt-dialog-modal{% if section.settings.image_height == 'adapt_image' %} hdt-is-adapt-image{% endif %}" scroll-lock>
      {% if block.settings.click_action == 'inline' and block.settings.enable_close %}
        <label for="input-{{ block.id }}" class="hdt-s-text hdt-dialog-btn__close" aria-label="{{ 'accessibility.close' | t | escape }}">{%- render 'icon' with 'close' -%}</label>
      {% elsif block.settings.click_action == 'popup' %}
        <button ref="closeButton" class="hdt-s-text hdt-dialog-btn__close" aria-controls="modal-{{ block.id }}" aria-label="{{ 'accessibility.close' | t | escape }}">{%- render 'icon' with 'close' -%}</button>
      {% endif %}
      <div class="hdt-dialog-modal__inner{% if block.settings.click_action == 'inline' %} hdt-media-overlap-content{% endif %}">
        {%- if block.settings.video != blank and block.settings.source == 'shopify' -%}
          <hdt-video-player autoplay id="media-{{ block.id }}">
            {{- block.settings.video | video_tag: image_size: '1500x', playsinline: true, muted: true, loop: true, controls: true, preload: 'metadata' -}}
          </hdt-video-player>
        {%- else -%}
          <hdt-video-player host="{{ block.settings.external_video_url.type }}" type="background" autoplay>
            <template>
              {%- if block.settings.external_video_url.type == 'youtube' -%}
                <iframe id="iframe-{{ block.id }}" src="https://www.youtube.com/embed/{{ block.settings.external_video_url.id }}?playsinline=1&autoplay=1&controls=1&mute=1&loop=1&playlist={{ block.settings.external_video_url.id }}&enablejsapi=1&rel=0&modestbranding=1&origin={{ 'https://' | append: request.host | url_encode }}" allow="autoplay; encrypted-media" allowfullscreen="allowfullscreen"></iframe>
              {%- elsif block.settings.external_video_url.type == 'vimeo' -%}
                <iframe src="https://player.vimeo.com/video/{{ block.settings.external_video_url.id }}?autoplay=1&autopause=1&background=1&loop=1&muted=1&transparent=0&responsive=1&portrait=0&title=0&byline=0&color={{ settings.color_accent | remove_first: '#' }}" allow="autoplay; encrypted-media;" allowfullscreen="allowfullscreen"></iframe>
              {%- endif -%}
            </template>
          </hdt-video-player>
        {%- endif -%}
      </div>
    </dialog>
  </hdt-modal>
</hdt-video-popup>
