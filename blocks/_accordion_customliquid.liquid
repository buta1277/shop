{%- liquid
  assign open = block.settings.open
  if block.settings.title == blank or block.settings.custom_liquid == blank
    continue
  endif
-%}
<hdt-accordion class="hdt-contents">
<details class="hdt-product-accordion__item" {% if open %}open {% endif %} {{ block.shopify_attributes }}>
  <summary aria-expanded="{{ open }}">
    <span class="hdt-product-accordion__text hdt-s-text hdt-font-semibold">{{ block.settings.title }}</span>
    <span class="hdt-product-accordion__icon"></span>
  </summary>
  <div class="hdt-product-accordion__content">{{ block.settings.custom_liquid }}</div>
</details>
</hdt-accordion>
{% schema %}
  {
    "name": "t:sections.main-product-tabs.blocks.accordion_customliquid.name",
    "tag": null,
    "settings": [
      {
        "type": "checkbox",
        "id": "open",
        "label": "Open",
        "default": false
      },
      {
        "type": "text",
        "id": "title",
        "label": "t:sections.main-product-tabs.blocks.accordion_customliquid.settings.title.label",
        "default": "Custom liquid"
      },
      {
        "type": "liquid",
        "id": "custom_liquid",
        "label": "t:sections.main-product-tabs.blocks.accordion_customliquid.settings.custom_liquid.label",
        "info": "t:sections.main-product-tabs.blocks.accordion_customliquid.settings.custom_liquid.info"
      }
    ],
    "presets": [
      {
        "name": "t:sections.main-product-tabs.blocks.accordion_customliquid.name"
      }
    ]
  }
{% endschema %}
