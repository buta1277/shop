{%- comment %} Check sizes image when Shopify update API {% endcomment -%}
 {% style %}
  #Scroll-{{ section.id }} > .hdt-wrap{
    gap: var(--spacing-item);
    --spacing-item: var(--spacing-item-mb);
  }
  @media (min-width: 750px){
    #Scroll-{{ section.id }} > .hdt-wrap{
      --spacing-item: var(--spacing-item-tb);
    }
  }
  @media (min-width: 1150px){
    #Scroll-{{ section.id }} > .hdt-wrap{
      --spacing-item: var(--spacing-item-dk);
    }
  }
 {% endstyle %}
<div id="Scroll-{{ section.id }}" class="hdt-col hdt-snap-center" style="position: relative; --width: {{ block.settings.width }}px; --width-md: {{ block.settings.width_md }}px; --width-lg: {{ block.settings.width_lg }}px;" {{ block.shopify_attributes }}>
  {% if section.settings.background_item %}
    <div class="hdt-background-column" style="background-color: {{ section.settings.background_item_color }}; height: {{ section.settings.background_item_percent }}%;"></div>
  {% endif %}
  <div class="hdt-wrap hdt-flex hdt-align-center{% if section.settings.icon_vertical %} hdt-flex-col hdt-text-center{% else %} sm:hdt-flex-col sm:hdt-text-center{% endif %}" style="position: relative; z-index: 1;">
    <div class="hdt-icon_wrap" hdt-reveal="slide-in" timeline>
      {%- liquid
        if block.settings.svg_upload != blank
          echo block.settings.svg_upload
        elsif block.settings.image_upload != blank
          echo block.settings.image_upload | image_url: width: 500 | image_tag: widths: '50, 100, 200, 300, 400, 500'
        else
          render 'icons', icon: block.settings.icon
        endif
      -%}
    </div>
    <div class="hdt-icons-content">
      {% content_for 'blocks' %}
    </div>
  </div>
</div>
